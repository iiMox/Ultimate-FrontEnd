.settings-box.hide-settings
    .toggle-settings
        i.fa.fa-cog.fa-lg
    .settings-content.text-center
        .option-box.color-options
            h4 Color Option
            - var themes = ["green-theme", "blue-theme", "red-theme", "purple-theme"]
            ul.list-unstyled
                each theme in themes 
                    li(data-theme=theme)
        .option-box.font-options
            h4 Font Option
            - var fonts = ["open", "roboto", "oswald"]
            select.form-control
                each font in fonts 
                    option(value=font)=font + ' Font'
        .option-box 
            h4 Sidebar Option